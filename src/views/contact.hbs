{{> nav}}
<div class="contact__page">
    <div class="container">
  <h2>Contact Us</h2>

  {{#if message}}
    <div class="flash-message {{message.type}}" id="flash-message">
      {{message.text}}
    </div>
  {{/if}}

  <form action="/contact" method="POST" class="contact__form" novalidate>
    <input
      type="text"
      name="name"
      placeholder="Your Name"
      required
      class="contact__form-input"
    />
    <input
      type="email"
      name="email"
      placeholder="Your Email"
      required
      class="contact__form-input"
    />
    <textarea
      name="message"
      placeholder="Your Message"
      required
      class="contact__form-textarea"
    ></textarea>
    <button type="submit" class="contact__form-button">Send</button>
  </form>
</div>
</div>

<script>
  setTimeout(() => { let flashMessage =
  document.getElementById("flash-message"); if (flashMessage)
  flashMessage.style.display = "none"; }, 5000);
</script>