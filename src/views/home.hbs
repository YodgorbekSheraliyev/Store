        <h3>The nature candle</h3>
        <p>All handmade with natural soy wax, Candleaf is a companion for all your pleasure moments </p>
        <button>Discovery our collection</button>
    </div>
</div>
<div class="container">
    <menu class="products">
        <h3>Products</h3>
        <p>Order it for you or for your beloved ones </p>
        <div class="product_card-wrapper">
            {{#if products}}
                {{#each products}}
                    <div class="product_card">
                        <div class="product_card-header">
                            <a href="/products/{{_id}}">
                                {{#if images}}
                                    <img src="{{firstImage images}}" alt="product image">
                                {{else}}
                                    <img src="/assets/default.webp" alt="product image">
                                {{/if}}
                            </a>
                        </div>
                        <div class="product_card-body">
                            <p class="product_name">{{name}}</p>
                            <h4 class="product_price">{{price}} so'm </h4>
                                {{!-- <a href="#"><button class="buy_button">Buy</button></a> --}}
                                <div class="button_group">
                                    <a href="/products/{{_id}}"  class="buy_button">Buy</a>
                                    <a type="button" class="save_button">Save</a>
                                </div>
                        </div>
                    </div>
                {{/each}}
            {{else}}
            <h2>No products yet :(</h2>
            {{/if}}
        </div>
    </menu>
</div>
<div class="features">
    <div class="container">
        <section class="features_left">
            <h2 class="features_title">
                Clean and fragrant soy wax
            </h2>
            <p class="features_text">
                Made for your home and for your wellness
            </p>
            <ul class="features_list">
                <li> <img src="/assets/checkmark-circle-outline 1.png" alt="checkmark-circle-outline">Eco-sustainable:All recyclable materials, 0% CO2 emissions</li>
